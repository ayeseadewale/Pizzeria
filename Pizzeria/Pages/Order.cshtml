@page
@model Pizzeria.Pages.OrderModel
@{
}
<h4>Order</h4>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Pizza Name
            </th>
            <th>
                Price
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.orders)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.PizzaName
                </td>
                <td>
                    @item.BasePrice
                </td>
            </tr>
        }
    </tbody>
</table>
